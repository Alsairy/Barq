{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=BarqDb;Trusted_Connection=true;MultipleActiveResultSets=true;Encrypt=true;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Key": "development-secret-key-for-testing-purposes-only-minimum-32-characters",
    "Issuer": "BarqAPI",
    "Audience": "BarqClient"
  },
  "Encryption": {
    "DefaultKeyId": "default-key",
    "CurrentKeyId": "default-key",
    "SearchableSalt": "barq-searchable-encryption-salt-2024",
    "KeyRotationIntervalDays": 90,
    "EnableTDE": true
  },
  "TLS": {
    "MinimumVersion": "1.3",
    "CipherSuites": [
      "TLS_AES_256_GCM_SHA384",
      "TLS_CHACHA20_POLY1305_SHA256",
      "TLS_AES_128_GCM_SHA256"
    ]
  },
  "Security": {
    "RealTimeMonitoring": true,
    "BruteForce": {
      "MaxAttempts": 5,
      "TimeWindowMinutes": 15
    },
    "DataExfiltration": {
      "ThresholdMB": 100
    }
  },
  "SIEM": {
    "Enabled": false,
    "Endpoint": "",
    "ApiKey": "",
    "Format": "JSON",
    "BatchSize": 100,
    "BatchIntervalMinutes": 5,
    "EnabledEventTypes": [
      "FAILED_LOGIN",
      "SUCCESSFUL_LOGIN",
      "BRUTE_FORCE_ATTEMPT",
      "SUSPICIOUS_ACTIVITY",
      "DATA_ACCESS_VIOLATION",
      "PRIVILEGE_ESCALATION"
    ],
    "CustomHeaders": {},
    "RetryAttempts": 3,
    "RetryDelaySeconds": 30
  }
}
